{
    "name": "@eslint-sets/monorepo",
    "description": "eslint-sets",
    "version": "2.0.0-alpha.2",
    "scripts": {
        "eslint": "eslint --fix --ext .vue,.js",
        "prettier": "npx prettier --write ./",
        "reinstall": "tscjs scripts/reinstall",
        "lib": "sh scripts/lib.sh",
        "docs": "sh scripts/docs.sh --docs",
        "push": "tscjs scripts/push.ts",
        "build": "tscjs scripts/build.ts",
        "build:rollup": "cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" rollup -c",
        "pub": "tscjs scripts/publish.ts",
        "unpub": "tscjs scripts/unpublish.ts",
        "update": "tscjs scripts/update.ts",
        "dist": "pnpm run update && pnpm build",
        "clean": "rimraf dist types typings packages/*/dist"
    },
    "main": "index.js",
    "devDependencies": {
        "@eslint-sets/eslint-config-simple-ts": "workspace:*",
        "@rollup/plugin-commonjs": "^21.0.3",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@saqqdy/prettier-config": "~1.1.2",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "consola": "^2.15.3",
        "cross-env": "^7.0.3",
        "esbuild": "^0.14.29",
        "esbuild-register": "^3.3.2",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-sets": "~1.8.1",
        "eslint-plugin-tsdoc": "^0.2.14",
        "fast-glob": "^3.2.11",
        "js-cool": "^2.3.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.70.1",
        "rollup-plugin-add-banner": "^1.0.0",
        "rollup-plugin-dts": "^4.2.0",
        "rollup-plugin-esbuild": "^4.8.2",
        "rollup-plugin-filesize": "^9.1.2",
        "rollup-plugin-replace-shebang": "^1.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-visualizer": "^5.6.0",
        "tsnd": "^1.0.2",
        "typedoc": "^0.22.13",
        "typedoc-plugin-markdown": "^3.11.14",
        "typescript": "^4.6.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/saqqdy/eslint-sets.git"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@babel/core",
                "webpack"
            ],
            "allowedVersions": {
                "eslint": "^8.10.0"
            }
        }
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "keywords": [
        "eslint-sets",
        "vue",
        "vue3.0"
    ],
    "author": "saqqdy.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/saqqdy/eslint-sets/issues"
    },
    "homepage": "https://github.com/saqqdy/eslint-sets#readme"
}
